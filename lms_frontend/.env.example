# Frontend environment configuration (React CRA style)
# Copy this file to `.env` and fill in the values as appropriate.
# Do NOT commit your real secrets.

# Base URLs
REACT_APP_FRONTEND_URL=http://localhost:3000
# Optional: backend URL if you proxy API via a server (not required for pure Supabase mode)
REACT_APP_BACKEND_URL=http://localhost:4000

# Supabase settings (use anon key only in frontend)
REACT_APP_SUPABASE_URL=
# Preferred variable name (anon key). If you already use REACT_APP_SUPABASE_KEY you can keep it.
REACT_APP_SUPABASE_ANON_KEY=
# Back-compat alias; if set, it will be used if ANON key is not present.
REACT_APP_SUPABASE_KEY=

# Healthcheck path routing
REACT_APP_HEALTHCHECK_PATH=/health

# Feature flags (string, JSON or CSV supported by FeatureFlagsContext)
# Example JSON: {"FLAG_SUPABASE_MODE": true, "FLAG_ALLOW_SEED": true}
# Example CSV: FLAG_SUPABASE_MODE,FLAG_ALLOW_SEED
REACT_APP_FEATURE_FLAGS={"FLAG_SUPABASE_MODE": true}

# Optional: App meta
REACT_APP_NODE_ENV=development
REACT_APP_VERSION=0.1.0
REACT_APP_PORT=3000
